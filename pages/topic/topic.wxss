/* pages/topic/topic.wxss */

.container {
  width: 100%;
  height: 100%;
  padding-top: 2px;
}

.title {
  width: 100%;
  font-size: 16px;
  font-weight: 600;
  text-align: left;
  padding-left: 12px;
  line-height: 1.2;
  margin: 12px auto;
}

.author {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 8px;
}

.author-avatar {
  width: 24px;
  height: 24px;
  margin-left: 12px;
}

.author-name {
  font-size: 12px;
  color: #999;
  padding: 2px 4px;
  margin-left: 6px;
}

.avatar {
  width: 24px;
  height: 24px;
  margin: 0 auto;
}

.name {
  font-size: 12px;
  color: #999;
  padding: 2px 4px;
  margin-top: 6px;
}

.content {
  width: 90%;
  padding: 0 12px;
  font-size: 14px;
  line-height: 1.2;
  word-wrap:break-word; 
}

.reply {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  font-size: 14px;
  padding: 8px 0;
  border-bottom: 1px solid #e2e2e2;
}

.reply-left {
  flex: 2;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.reply-right {
  flex: 8;
  margin-left: 6px;
  text-align: left;
}

.thanks{
    border-radius: 50%;
    font-size: 12px;
    color: #ccc;
    padding: 2px 5px 2px 5px;
    background-color: #f0f0f0;
}