<!--pages/hot/hot.wxml-->
<view class="container">
  <view hover-class="hover" data-id="{{item.id}}" class="topic-item" bindtap="showContent" wx:for="{{ hotTopics }}" wx:key="id">
    <image class="item-avatar item-left" src="{{item.member.avatar_mini}}"></image>
    <view class="item-right">
      <text class="item-title">{{ item.title }}</text>
      <view class="item-tag inline">{{ item.node.title }}</view>
      <view class="point"></view>
      <text class="item-author inline">{{item.member.username}}</text>
      <text class="replies inline">回复数:{{ item.replies }}</text>
    </view>
  </view>
</view>
