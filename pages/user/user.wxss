/* pages/user/user.wxss */
.container{
    width: 100%;
    height: 100%;
    align-items: center;
    padding-top: 10%;
    background-color: #f4f4f4;
}
.user-avatar{
    width: 96px;
    height: 96px;
    box-shadow: 2px 4px 4px rgba(0, 0, 0, .1);
    margin-bottom: 24px;
}
.user-name{
    font-weight: bold;
}
.user-bio{
    width: 90%;
    color: #808080;
    font-size: 14px;
    text-align: left;
    margin: 12px auto;
}
.user-github{
    width: 90%;
    font-size: 14px;
    color: #808080;
    text-decoration: underline;    
    text-align: left;
}
.user-website{
    width: 90%;
    color: #808080;
    font-size: 14px;
    text-decoration: underline;    
    margin-bottom: 24px;
}
.user-topic{
    width: 90%;
    font-size: 12px;
    color: #808080;
    padding: 8px 12px;
    text-align: left;
}